<title>Trakehner Breeders</title>

<div class="section-colored text-center">
  <div id="breeder_index_header">
    <h1>The Unofficial Trakehner Database</h1></p><br>
    <h1>Listing Trakehner Breeders</h1>
  </div>
</div>

<div class="section-colored text-center">
  <div id="breeder_index_search">
    <br><br>
    <%= render 'layouts/breeder_search' %>
    <br><br>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @breeders.each do |breeder| %>
      <tr id="<%= breeder.id %>">
        <td><%= breeder.name %></td>
        <td><%= breeder.address %></td>
        <td><%= link_to 'Show', breeder %></td>
        <td><%= link_to 'Edit', edit_breeder_path(breeder) %></td>
        <td><%= link_to 'Delete Breeder', breeder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="section-colored text-center">
  <div class="indexFooter">
    <%= link_to 'New Breeder', new_breeder_path %>
    <br><br>
    <%= link_to 'Home', root_path %>
  </div>
</div>
