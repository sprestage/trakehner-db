<title><%= t "shared.unofficial_trakehner_database" %></title>

<%= render 'shared/website_title' %>

<div id='sign_in_out_div' class='center responsive_text'>
  <% if current_user %>
    <%= t 'shared.logged_in_as' %> <%= current_user.email %>
    <%= link_to "Sign Out", signout_path %>
  <% else %>
    <%= link_to "Sign In", new_user_session_path %>
  <% end %>
</div>

<br/>

<div class='center'>
  <div class='horse_image_container'>
    <figure>
      <%= image_tag(@horse.image_url(:pedigree).to_s, :class => "horse_image" ) %>
    </figure>
  </div>
  <h3><%= link_to @horse.name, @horse%></h3>
</div>

