<title>Trakehner Horses</title>

<div class="section-colored text-center">
  <div id="horse_index_header">
    <h1>The Unofficial Trakehner Database</h1></p><br><br>
  </div>
</div>

<head>
  <style>
    <%= render 'horses_index_css' %>
  </style>
</head>

<table>
  <thead>
    <tr>
      <th class="text-center">Thumbnail</th>
      <th class="text-center">Trakehner Name</th>
      <th>Sex</th>
      <th>YOB</th>
      <th class="text-center">Sire</th>
      <th class="text-center">Dam</th>
      <th class="text-center">Damsire</th>
      <th>Color</th>
      <!-- TODO: When we finally get Height implemented, drop the display
      of damsire to make room in the horse index display. -->
    </tr>
  </thead>

  <tbody>
    <% @horses.each do |horse| %>
      <tr id="<%= horse.id %>">
        <% if horse.image_url %>
          <td><%= image_tag horse.image_url(:thumbnail).to_s %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to horse.name, horse %></td>
        <td><%= horse.sex %></td>
        <td><%= horse.birth_year %></td>
        <td><%= link_to horse.sire.name, horse %></td>
        <td><%= link_to horse.dam.name, horse %></td>
        <td><%= link_to horse.dam.sire.name, horse %></td>
        <td><%= horse.color %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="nav">
  <div id="horse_index_new_horse">
    <% if policy(Horse).create? %>
      <%= link_to 'New Horse', new_horse_path %><br />
    <% end %>
  </div>
</div>

<%= paginate @horses %>
<br>
<%= link_to 'Home', root_path %>
