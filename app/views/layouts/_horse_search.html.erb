
<%= form_tag horses_path, method: :get do %>

  <div id="horse_search_bar">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag t("sidebar.search"), :name => nil %>
  </div>

  <div class="has_image_checkbox">
  <%= check_box_tag :has_image, params[:has_image] %>
  <%= label_tag :has_image, t("sidebar.has_image") %>
  </div>

<% end %>
